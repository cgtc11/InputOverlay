<Window x:Class="InputOverlay.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputOverlay v1.0.0"
        Width="340" Height="760"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#FFF0F0F0"
        PreviewMouseRightButtonDown="PropertiesWindow_MouseRightButtonDown"
        PreviewMouseMove="PropertiesWindow_MouseMove"
        PreviewMouseRightButtonUp="PropertiesWindow_MouseRightButtonUp">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12">

            <!-- ヘッダ -->
            <TextBlock Text="InputOverlay v1.0.0" FontWeight="Bold"/>
            <TextBlock Margin="0,6,0,0" Text="・マウス右ドラッグ：Window移動"/>
            <TextBlock Text="・ショートカットがアプリと被る場合は変更してください" />

            <!-- F1 オプション -->
            <Separator Margin="0,10,0,6"/>
            <TextBlock Text="------ Shift+F1 オプション表示 On/Off ------" />
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ショートカット設定:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ShortcutOptionsBox" Width="100" Margin="6,0,0,0"/>
                </StackPanel>
                <CheckBox x:Name="ChkShiftOptions" Grid.Column="2" Content="Shift併用" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <!-- F2 表示 On/Off -->
            <Separator Margin="0,10,0,6"/>
            <TextBlock Text="------ Shift+F2 キー表示機能 On/Off ------" />
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ショートカット設定:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ShortcutVisibilityBox" Width="100" Margin="6,0,0,0"/>
                </StackPanel>
                <CheckBox x:Name="ChkShiftVisibility" Grid.Column="2" Content="Shift併用" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <!-- ウィンドウ移動許可 -->
            <CheckBox x:Name="ChkMovable" Content="ウィンドウの移動を許可" Margin="0,6,0,0"/>

            <!-- ウィンドウ拡大 -->
            <TextBlock Margin="0,8,0,2" Text="ウィンドウ拡大:"/>
            <Slider x:Name="WindowScaleSlider" Minimum="0.5" Maximum="3.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" Width="240"/>

            <!-- 背景の透明度 -->
            <TextBlock Margin="0,12,0,2" Text="透明度:"/>
            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1" IsSnapToTickEnabled="True" Width="240"/>

            <!-- 文字の透明度 -->
            <TextBlock Margin="0,12,0,2" Text="文字の透明度:"/>
            <Slider x:Name="TextOpacitySlider" Minimum="0" Maximum="1" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" Width="240"/>

            <!-- 文字色 -->
            <TextBlock Margin="0,8,0,2" Text="文字色:"/>
            <ComboBox x:Name="ColorPicker" Width="140">
                <ComboBoxItem Content="白"   Tag="White"   IsSelected="True"/>
                <ComboBoxItem Content="黄"   Tag="Yellow"/>
                <ComboBoxItem Content="赤"   Tag="Red"/>
                <ComboBoxItem Content="緑"   Tag="Green"/>
                <ComboBoxItem Content="青"   Tag="Blue"/>
                <ComboBoxItem Content="黒"   Tag="Black"/>
            </ComboBox>

            <!-- ★ 影設定 -->
            <StackPanel Margin="0,10,0,0">
                <CheckBox x:Name="ChkShadowEnabled" Content="文字に影を出す"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="影の距離(px):" VerticalAlignment="Center"/>
                    <Slider x:Name="ShadowOffsetSlider"
                            Minimum="0" Maximum="2" Value="2"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            Width="160" Margin="6,0,0,0"/>
                </StackPanel>
                <CheckBox x:Name="ChkOutlineEnabled" Content="縁にする" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- F3 ペイント -->
            <Separator Margin="0,12,0,6"/>
            <TextBlock Text="------ F3 ペイント機能 On/Off ------" />
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ショートカット設定:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ShortcutPaintBox" Width="100" Margin="6,0,0,0"/>
                </StackPanel>
                <CheckBox x:Name="ChkShiftPaint" Grid.Column="1" Content="Shift併用" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="線の色:" VerticalAlignment="Center"/>
                <ComboBox x:Name="PenColorBox" Width="100" Margin="6,0,0,0">
                    <ComboBoxItem Content="赤" Tag="Red" IsSelected="True"/>
                    <ComboBoxItem Content="白" Tag="White"/>
                    <ComboBoxItem Content="黄" Tag="Yellow"/>
                    <ComboBoxItem Content="緑" Tag="Green"/>
                    <ComboBoxItem Content="青" Tag="Blue"/>
                    <ComboBoxItem Content="黒" Tag="Black"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="線の太さ(px):" VerticalAlignment="Center"/>
                <TextBox x:Name="PenThicknessBox" Width="60" Margin="6,0,0,0" Text="3"/>
            </StackPanel>

            <!-- F4 ルーペ -->
            <Separator Margin="0,12,0,6"/>
            <TextBlock Text="------ F4 ルーペ機能 On/Off ------" />
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ショートカット設定:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ShortcutMagnifierBox" Width="100" Margin="6,0,0,0"/>
                </StackPanel>
                <CheckBox x:Name="ChkShiftMagnifier" Grid.Column="1" Content="Shift併用" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="拡大窓サイズ 幅(px):" VerticalAlignment="Center"/>
                <TextBox x:Name="MagnifierWidthBox" Width="70" Margin="6,0,0,0" Text="1200"/>
                <TextBlock Text=" 縦(px):" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="MagnifierHeightBox" Width="70" Margin="6,0,0,0" Text="800"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="拡大率:" VerticalAlignment="Center"/>
                <TextBox x:Name="MagnifierZoomBox" Width="60" Margin="6,0,0,0" Text="3.0"/>
            </StackPanel>

            <!-- 終了 -->
            <Button Margin="0,14,0,6" Content="アプリケーションの終了" Width="220" HorizontalAlignment="Center" Click="Exit_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
