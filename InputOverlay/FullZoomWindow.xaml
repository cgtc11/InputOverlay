<Window x:Class="InputOverlay.FullZoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullZoomWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        Cursor="None"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        PreviewMouseWheel="FullZoomWindow_MouseWheel"
        MouseDown="FullZoomWindow_MouseDown"
        MouseMove="FullZoomWindow_MouseMove"
        MouseUp="FullZoomWindow_MouseUp">
    <Grid x:Name="Root" Background="Transparent">
        <Canvas x:Name="Overlay" IsHitTestVisible="False">
            <Image x:Name="CursorOverlay" Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</Window>
