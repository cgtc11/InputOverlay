<Window x:Class="InputOverlay.FullZoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullZoomWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseWheel="FullZoomWindow_MouseWheel"
        MouseDown="FullZoomWindow_MouseDown"
        MouseMove="FullZoomWindow_MouseMove"
        MouseUp="FullZoomWindow_MouseUp"
        PreviewMouseRightButtonDown="Window_PreviewMouseRightButtonDown">
    <Grid x:Name="Root"
          Background="#01000000"
          IsHitTestVisible="True">
        <!-- Win32 magnifier child will be created in code-behind -->
    </Grid>
</Window>
